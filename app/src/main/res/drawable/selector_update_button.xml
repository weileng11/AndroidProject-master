    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#ba352d" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#ba352d" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#e94339" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>